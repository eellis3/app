<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="100dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="fill_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/nameEmailWrapper"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Smith"
            android:textSize="20sp"
            android:id="@+id/customerNameButton"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:layout_below="@+id/customerNameButton"
            android:id="@+id/customerEmail"
            android:singleLine="true"
            android:textSize="17sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerEmail"
            android:id="@+id/spentWrapper"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spent:"
                android:id="@+id/spentLabel"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$51"
                android:singleLine="true"
                android:layout_toRightOf="@+id/spentLabel"
                android:layout_alignBaseline="@+id/spentLabel"
                android:id="@+id/customerSpent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerEmail"
            android:id="@+id/creditWrapper"
            android:layout_toRightOf="@id/spentWrapper"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit:"
                android:textStyle="bold"
                android:id="@+id/creditLabel"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="$1"
                android:layout_toRightOf="@+id/creditLabel"
                android:layout_alignBaseline="@+id/creditLabel"
                android:id="@+id/customerCredit"
                android:ellipsize="end"
                android:singleLine="true"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".33">
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_create_black_24dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/editButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_below="@+id/editButton"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".33"
        >
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_history_black_24dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/historyButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:layout_below="@+id/historyButton"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".33">
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_attach_money_black_24dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/purchaseButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchase"
            android:layout_below="@+id/purchaseButton"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"/>

    </RelativeLayout>


    </LinearLayout>

</RelativeLayout>