<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_other_detail"
    tools:context="edu.gatech.seclass.scm.activities.OtherDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Price:"
        android:textSize="25sp"
        android:id="@+id/enterPriceLabel"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterPriceLabel"
        android:id="@+id/enterPriceInput"
        android:inputType="numberDecimal"
        android:numeric="decimal" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterPriceInput"
        android:layout_centerHorizontal="true"
        android:text="Add to Cart"
        android:id="@+id/otherAddToCartButton"/>

</RelativeLayout>
