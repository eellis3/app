<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_customer"
    tools:context="edu.gatech.seclass.scm.activities.AddCustomerActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idWrapper">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer ID:"
            android:id="@+id/customerID"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="This is autogenerated"
            android:layout_below="@id/customerID"
            android:id="@+id/customerIDInput"
            android:maxLength="32" />

    </RelativeLayout>
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_below="@+id/idWrapper"
        android:id="@+id/nameWrapper">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Name"
        android:id="@+id/customerNameLabel"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_below="@id/customerNameLabel"
        android:id="@+id/firstNameInput"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_below="@id/firstNameInput"
        android:id="@+id/lastNameInput"/>
</RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/nameWrapper"
    android:id="@+id/emailWrapper">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/emailLabel"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_below="@id/emailLabel"
        android:id="@+id/emailInput"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailWrapper"
        android:id="@+id/addressWrapper">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billing Address"
            android:id="@+id/addressLabel"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Address Line 1"
            android:inputType="textEmailAddress"
            android:layout_below="@id/addressLabel"
            android:id="@+id/address1Input"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Address Line 2"
            android:inputType="textEmailAddress"
            android:layout_below="@id/address1Input"
            android:id="@+id/address2Input"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address2Input">
            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:hint="City"
                android:inputType="text"
                android:id="@+id/cityInput"
                />
            <Spinner
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/editZipInput"
                android:layout_alignBottom="@+id/editZipInput"
                android:id="@+id/stateDropdown"
                android:entries="@array/state_array"
                android:layout_toRightOf="@+id/cityInput">
            </Spinner>
            <EditText
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:hint="Zip"
                android:inputType="number"
                android:maxLength="5"
                android:numeric="integer"
                android:id="@+id/zipInput"
                android:layout_toRightOf="@+id/stateDropdown"/>
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:layout_below="@+id/addressWrapper"
        android:layout_centerHorizontal="true"
         />
</RelativeLayout>
