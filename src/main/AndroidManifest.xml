<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.scm" >

    <application
        android:name=".SmoothieCartManagerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Smoothie Cart Manager"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddCustomerActivity"
            android:label="@string/title_activity_add_customer"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.EditCustomerActivity"
            android:label="@string/title_activity_edit_customer"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.PurchaseHistoryActivity"
            android:label="@string/title_activity_purchase_history"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SelectPurchaseItemActivity"
            android:label="@string/title_activity_purchase_item"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SmoothieDetailActivity"
            android:label="@string/title_activity_smoothie_detail"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SelectPurchaseItemActivity" />
        </activity>
        <activity
            android:name=".activities.OtherDetailActivity"
            android:label="@string/title_activity_other_detail"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SelectPurchaseItemActivity" />
        </activity>
        <activity
            android:name=".activities.CartActivity"
            android:label="@string/title_activity_cart"
            android:parentActivityName=".activities.SelectPurchaseItemActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.gatech.seclass.scm.activities.SelectPurchaseItemActivity" />
        </activity>
        <activity
            android:name=".activities.QrScanActivity"
            android:label="@string/title_activity_qr_scan"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.gatech.seclass.scm.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CustomerInfoActivity"
            android:label="@string/title_activity_customer_info"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.gatech.seclass.scm.activities.MainActivity" />
        </activity>
    </application>

</manifest>
